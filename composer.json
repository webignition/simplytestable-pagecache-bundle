{
    "name": "webignition/simplytestable-pagecache-bundle",
    "type": "symfony-bundle",
    "require": {
        "php": ">=7.2.0",
        "symfony/http-kernel": "^4.1",
        "symfony/dependency-injection": "^4.1",
        "symfony/config": "^4.1",
        "doctrine/orm": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "squizlabs/php_codesniffer": "3.*",
        "mockery/mockery": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SimplyTestable\\PageCacheBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimplyTestable\\PageCacheBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test-unit": "./vendor/bin/phpunit --colors tests/Src/Unit/",
        "test-functional": "./vendor/bin/phpunit --colors tests/Src/Functional/",
        "test": [
            "@composer test-unit",
            "@composer test-functional"
        ],
        "cs": "./vendor/bin/phpcs --colors --standard=PSR2 --extensions=php src tests/",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    }
}
